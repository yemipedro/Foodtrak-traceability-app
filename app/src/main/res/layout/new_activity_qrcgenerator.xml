<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.akinyemi.logicverse.farmovoqrbarcodescanner.QRCGenerator">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Choose One"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/listbackground"
                android:onClick="plaintextdata"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="69dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/mystyle4"
                    android:onClick="plaintextdata"
                    app:srcCompat="@drawable/note" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:paddingLeft="20dp"
                    android:text="PlainText Creation"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/listbackground"
                android:onClick="vcarddata"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:onClick="vcarddata"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="vcarddata"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:text="Vcard Creation"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/listbackground"
                android:onClick="weblnkdata"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:onClick="weblnkdata"
                    app:srcCompat="@drawable/internet" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="weblnkdata"
                    android:textColor="#000000"
                    android:paddingLeft="20dp"
                    android:text="Weblink Creation"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/listbackground"
                android:onClick="productnumber"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:onClick="productnumber"
                    app:srcCompat="@drawable/contract" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="productnumber"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:text="ProductNumber Creation"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/listbackground"
                android:onClick="personaldetails"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:background="@drawable/mystyle4"
                    android:onClick="personaldetails"
                    app:srcCompat="@drawable/addressbook" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:onClick="personaldetails"
                    android:paddingLeft="20dp"
                    android:text="Personal Details"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
