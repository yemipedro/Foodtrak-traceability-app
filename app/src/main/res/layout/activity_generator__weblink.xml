<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aer"
    tools:context="com.akinyemi.logicverse.farmovoqrbarcodescanner.Generator_Weblink">
    <TextView
        android:text="@string/enter_weblink"
        android:textColor="#ffff"
        android:gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/enterwebink"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="22sp"
        android:text="@string/generate_qrcode"
        android:textColor="#cccccc"
        android:background="#79a209df"
        android:onClick="genweblink"
        android:id="@+id/weblinkqrcode"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/weblinkdata"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:drawableLeft="@drawable/ic_action_weblink"
        android:backgroundTint="#ffff"
        android:drawablePadding="20dp"
        android:hint="Enter Weblink"
        android:inputType="textWebEditText"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/enterwebink"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
